        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDFilm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titlu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDFilm)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDRecenzie }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDRecenzie }) |
