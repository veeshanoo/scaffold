}

<h2>Index</h2>

<p>
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <script>alert("@ViewBag.message");</script>
    }
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @Html.ActionLink("Search", "Search")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titlu)
        </th>
        <th>
